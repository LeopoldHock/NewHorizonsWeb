<div class="panelLarge">
    <h2 class="fg-white text-center">Generator-Voreinstellungen</h2>
    <Layout::Panel>
        <p class="text-center">{{localize "Misc_CharacterPresetDisclaimer"}}</p>
        <Interactable::Dropdown @label="Misc_Preset" @size="2x" @items={{this.model.characterPresets}}
            @onChange={{this.onChangePreset}} @info="basic-rules/chapter/entry" />
        <Interactable::Inputfield @label="Misc_GPBonus" @size="1x" @value={{this.selectedPreset.gpBonus}} />
        <Interactable::Inputfield @label="Misc_AvailableAP" @size="1x" @value={{this.selectedPreset.apAvailable}} />
        <Interactable::Inputfield @label="Misc_MaxTraits" @size="1x" @value={{this.selectedPreset.traitsMax}} />
        <Interactable::Inputfield @label="Misc_MaxAbilities" @size="1x" @value={{this.selectedPreset.abilitiesMax}} />
        <Interactable::Inputfield @label="Misc_AvailableIP" @size="1x" @value={{this.selectedPreset.ipAvailable}} />
        <Interactable::Inputfield @label="Misc_StartEP" @size="1x" @value={{this.selectedPreset.epStart}} />
        <Interactable::Inputfield @label="Misc_StartMoney" @size="1x" @value={{this.selectedPreset.crStart}} />
        <Interactable::Inputfield @label="Misc_StartFP" @size="1x" @value={{this.selectedPreset.fpStart}} />
    </Layout::Panel>
</div>